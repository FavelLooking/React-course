{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./dist/types/**/*.ts", "./next-env.d.ts"],
  "exclude": ["./node_modules"]
}
